<Window x:Class="AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileGridGenerator"
        mc:Ignorable="d"
        Title="AuthWindow" Height="177.578" Width="354.036">

    <StackPanel>
        
        <GroupBox Header="Flickr Authentifizierung" Padding="3">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Authentifizierungscode:"/>
                    <TextBox Name="AutCode" Width="150"/>


                </StackPanel>
                <Button Click="Button_Click" Content="Abschliessen"/>
                <TextBlock Name="txtResult" Text="{Binding Result}"/>
            </StackPanel>
        </GroupBox>
        <Button Name="txtAllOk" Click="TxtAllOk_Click" Content="Schliessen und App starten" HorizontalAlignment="Center" Padding="5" Margin="5"/>
    </StackPanel>
</Window>
